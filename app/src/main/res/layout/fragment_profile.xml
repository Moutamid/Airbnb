<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context=".fragments.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:textSize="34sp"
                android:layout_marginTop="10sp"
                android:text="Profile" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                android:layout_marginTop="12sp"
                app:cardBackgroundColor="@color/dark"
                app:cardElevation="0sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="12sp"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_icon"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        app:civ_border_width="0sp"
                        android:src="@drawable/profile_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12sp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_marginBottom="12sp"
                            android:textSize="28sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_bold" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="example@gmail.com"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="@font/roboto" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="26sp"
                        android:layout_height="26sp"
                        android:rotation="180"
                        android:src="@drawable/back" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="24sp"
                android:layout_marginTop="20sp"
                android:text="Hosting" />

            <Button
                android:id="@+id/host"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/door_open"
                android:drawablePadding="12sp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto"
                android:gravity="start|center_vertical"
                android:padding="12sp"
                android:drawableRight="@drawable/right"
                android:text="\t\tHost your space"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mySpace"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/door_open"
                android:drawablePadding="12sp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto"
                android:gravity="start|center_vertical"
                android:padding="12sp"
                android:drawableRight="@drawable/right"
                android:text="\t\tMy Hosted Space"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="24sp"
                android:layout_marginTop="20sp"
                android:text="Reservations" />

            <Button
                android:id="@+id/reservation"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/house"
                android:drawablePadding="12sp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto"
                android:gravity="start|center_vertical"
                android:padding="12sp"
                android:drawableRight="@drawable/right"
                android:text="\t\tReservation Requests"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="24sp"
                android:layout_marginTop="20sp"
                android:text="Flight Booking" />

            <Button
                android:id="@+id/flight"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/plane"
                android:drawablePadding="12sp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto"
                android:gravity="start|center_vertical"
                android:padding="12sp"
                android:drawableRight="@drawable/right"
                android:text="\t\tBook your flight"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="24sp"
                android:layout_marginTop="20sp"
                android:text="Legal" />

            <Button
                android:id="@+id/privacy"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/shield_halved"
                android:drawablePadding="12sp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto"
                android:gravity="start|center_vertical"
                android:padding="12sp"
                android:drawableRight="@drawable/right"
                android:text="\t\tPrivacy Policy"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/term"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/shield_halved"
                android:drawablePadding="12sp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto"
                android:gravity="start|center_vertical"
                android:padding="12sp"
                android:drawableRight="@drawable/right"
                android:text="\t\tTerms of services"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="12sp"
                android:text="@string/logout"
                android:backgroundTint="@color/dark"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>