<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
    tools:context=".activities.DetailViewActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLay"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:background="@color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:backgroundTint="@color/back"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/heart_off" />

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/back"
                    android:layout_marginStart="15sp"
                    android:src="@drawable/back" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:cardBackgroundColor="@color/dark">


                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="false"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    android:layout_alignParentTop="true"
                    app:sliderIndicatorPadding="3dp"
                    android:background="@color/dark"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="@color/blue"
                    app:sliderIndicatorUnselectedColor="@color/text_off"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="false" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:text="Title"
                android:fontFamily="@font/roboto_bold"
                android:textSize="22sp"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 (202 reviews)"
                    android:fontFamily="@font/roboto"
                    android:textSize="15sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:drawableLeft="@drawable/star"
                    android:drawablePadding="8sp" />

                <View
                    android:layout_width="4sp"
                    android:layout_height="4sp"
                    android:background="@drawable/circle"
                    android:layout_marginStart="6sp"
                    android:layout_marginEnd="6sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Los Angeles, California, United States"
                    android:layout_marginStart="6sp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:textColor="@color/text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/profile_icon" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="Hosted by Suleman"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="22sp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 guests"
                    android:fontFamily="@font/roboto"
                    android:textSize="15sp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:drawableTint="@color/text"
                    android:drawableLeft="@drawable/people"
                    android:drawablePadding="8sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp" />

                <View
                    android:layout_width="4sp"
                    android:layout_height="4sp"
                    android:background="@drawable/circle"
                    android:layout_marginStart="6sp"
                    android:layout_marginEnd="6sp" />

                <TextView
                    android:id="@+id/bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 bed"
                    android:layout_marginStart="6sp"
                    android:layout_marginEnd="10sp"
                    android:gravity="center"
                    android:drawableTint="@color/text"
                    android:drawableLeft="@drawable/bed"
                    android:drawablePadding="8sp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:textColor="@color/text" />

                <View
                    android:layout_width="4sp"
                    android:layout_height="4sp"
                    android:background="@drawable/circle"
                    android:layout_marginStart="6sp"
                    android:layout_marginEnd="6sp" />

                <TextView
                    android:id="@+id/bath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 bath"
                    android:gravity="center"
                    android:drawableTint="@color/text"
                    android:drawableLeft="@drawable/shower"
                    android:drawablePadding="8sp"
                    android:layout_marginStart="6sp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:textColor="@color/text" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:text="Description"
                android:drawableLeft="@drawable/clipboard"
                android:drawableTint="@color/white"
                android:drawablePadding="12sp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="22sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/text_off" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:lineHeight="20sp"
                android:textSize="16sp"
                android:layout_marginTop="12sp"
                android:text="@string/lorem" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        android:background="@color/dark"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12sp"
                    android:text="$12.00"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/night"
                    android:layout_marginStart="6sp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:textColor="@color/text" />

            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12sp"
                android:text="27 May - 30 May"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:textColor="@color/text" />

        </LinearLayout>

        <Button
            android:id="@+id/reserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserve"
            android:textSize="18sp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"
            android:paddingStart="15sp"
            android:paddingEnd="15sp" />

    </LinearLayout>

</RelativeLayout>